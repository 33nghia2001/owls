# =============================================================================
# OWLS E-COMMERCE PLATFORM - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your values
# SECURITY: Never commit .env file to version control!

# --- GENERAL ---
# SECURITY: Set DEBUG=False in production!
DEBUG=False
SECRET_KEY=<generate-a-strong-secret-key-here>
ALLOWED_HOSTS=localhost,127.0.0.1

# --- JWT RS256 KEYS (REQUIRED for Production) ---
# Generate keys: python generate_keys.py
# SECURITY: RS256 is mandatory in production - there is NO fallback to HS256
# Option 1: Load from files (keys/private.pem and keys/public.pem)
# Option 2: Paste keys directly here (use triple quotes for multiline)
# JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# --- DATABASE ---
# SECURITY: Use strong passwords, not example values!
DATABASE_URL=postgres://user:password@host:port/database_name

# --- REDIS ---
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# --- TIME & LANGUAGE ---
TIME_ZONE=Asia/Ho_Chi_Minh
LANGUAGE_CODE=vi

# --- SITE CONFIG ---
SITE_DOMAIN=owls.asia
# SECURITY: Update these URLs for production!
FRONTEND_URL=https://owls.asia
ADMIN_URL=https://admin.owls.asia

# --- PROXY CONFIGURATION ---
# Set to the number of trusted proxies in front of Django
# - Cloudflare only: 1
# - Cloudflare + ALB: 2
# - No proxy (direct): 0
NUM_PROXIES=0

# --- EMAIL ---
# SECURITY: Use a real email service in production!
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=

# --- STORAGE (Cloudflare R2) ---
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=owls
AWS_S3_ENDPOINT_URL=https://account-id.r2.cloudflarestorage.com
AWS_S3_REGION_NAME=auto
AWS_S3_CUSTOM_DOMAIN=

# --- FRAUD DETECTION (Optional - defaults in code) ---
# Override velocity limits dynamically (JSON format)
# FRAUD_VELOCITY_LIMITS={"orders_per_hour_user": 5, "orders_per_hour_ip": 10}

# --- PAYMENT GATEWAYS ---
# SECURITY: Never commit real API keys!

# VNPay
VNPAY_TMN_CODE=
VNPAY_HASH_SECRET=
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=
VNPAY_API_URL=https://sandbox.vnpayment.vn/merchant_webapi/api/transaction

# MoMo
MOMO_PARTNER_CODE=
MOMO_ACCESS_KEY=
MOMO_SECRET_KEY=
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api
MOMO_RETURN_URL=
MOMO_NOTIFY_URL=

# ZaloPay
ZALOPAY_APP_ID=
ZALOPAY_KEY1=
ZALOPAY_KEY2=
ZALOPAY_ENDPOINT=https://sb-openapi.zalopay.vn/v2
ZALOPAY_CALLBACK_URL=

# --- SECURITY SETTINGS (Production) ---
CORS_ALLOWED_ORIGINS=https://owls.asia,https://admin.owls.asia,https://seller.owls.asia
# CORS_ALLOWED_ORIGIN_REGEXES=^https://.*\\.owls\\.asia$
CSRF_TRUSTED_ORIGINS=https://owls.asia,https://admin.owls.asia
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
